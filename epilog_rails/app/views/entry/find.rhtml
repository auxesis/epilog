<div id='spinner'>
  <%= image_tag 'spinner.gif', :id => 'sp' %>
</div>

<% form_remote_tag :url => url_for(:action => "query") do %>
<div id="querier">
 <%= image_tag 'epilog-logo.png' %>
 <%= text_field 'query', 'query', 'value' => @query  %>
</div>

  <div id='ajaxWrapper'>
      <%= render :partial => 'results' %>
  </div>

  <%= observe_field :query_query,
                    :frequency  => 0.5,
                    :update     => 'ajaxWrapper',
                    :before     => "Element.show('sp')",
                    :complete   => "Element.hide('sp')",
                    :url        => {:action=>'query', :only_path => false},
                    :with      => "'query=' + encodeURIComponent(value)" 
  %>

  
<% end %>
